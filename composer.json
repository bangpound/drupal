{
    "name": "drupal/drupal",
    "description": "Drupal is an open source content management platform powering millions of websites and applications.",
    "type": "drupal-core",
    "license": "GPL-2.0+",
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "require": {
        "symfony/class-loader": "~2.4",
        "pimple/pimple": "~1.1"
    },
    "require-dev": {
        "composer/composer": "1.0.*@dev"
    },
    "scripts": {
        "post-install-cmd": [
            "Bangpound\\Drupal\\Composer\\ScriptHandler::dumpAutoload"
        ],
        "post-update-cmd": [
            "Bangpound\\Drupal\\Composer\\ScriptHandler::dumpAutoload"
        ]
    },
    "bin": [
        "scripts/drupal.sh",
        "scripts/password-hash.sh"
    ]
}
