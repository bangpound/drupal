{
    "name": "drupal/drupal",
    "description": "Drupal is an open source content management platform powering millions of websites and applications.",
    "type": "drupal-core",
    "license": "GPL-2.0+",
    "autoload": {
        "psr-0": {
            "": "src/"
        },
        "classmap": [
            "includes/",
            "misc/",
            "modules/",
            "scripts/",
            "themes/",
            "authorize.php",
            "cron.php",
            "index.php",
            "install.php",
            "update.php",
            "xmlrpc.php"
        ]
    },
    "require": {
        "php": ">=5.3.3",
        "composer/installers": "~1.0",
        "bangpound/drupal-bundle": "dev-master",
        "pimple/pimple": "2.0.*@dev"
    },
    "bin": ["scripts/drupal.sh", "scripts/password-hash.sh"]
}
